.sailaabs-list(layout='row')
  span(flex='')
  div(layout='column')
    h1 Sailaabs
    form.md-whiteframe-z1(ng-submit='save()', name='form', novalidate='', layout-padding='')
      p Add a sailaab
      md-input-container
        label Name
        input(ng-model='newSailaab.name', placeholder='Name')
      input.md-button(type='submit', value='Add')
    div(layout='row', layout-padding='')
      md-input-container(flex='65')
        label Search
        input(type='search', ng-model='search', placeholder='Search')
      md-select(ng-model='orderProperty', flex='35')
        md-option(value='1') Ascending
        md-option(value='-1') Descending

    ul
      li(dir-paginate='sailaab in sailaabs | itemsPerPage: perPage', total-items='sailaabsCount.count',  current-page='page')
        p 
          a(href='/sailaabs/{{sailaab._id}}') {{ sailaab.name }}
          button(ng-click='remove(sailaab._id)') &times;
    dir-pagination-controls.md-accent(on-page-change='pageChanged(newPageNumber)')

    p Total number of sailaabs: {{sailaabsCount.count}}
  span(flex='')