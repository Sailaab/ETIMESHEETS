.timesheet(layout='row')
  span(flex='')
  div(layout='column')
    table(border=1)
      tr
        th Project Title
        th Time Taken
        th Task
        th Added By
        th Created Date

      tr(ng-repeat='dailyLog in dailyLogs')
        td {{dailyLog.pname}}
        td {{dailyLog.Timetaken+'hrs'}}
        td {{dailyLog.description}}
        td {{dailyLog.user}}
        td{{dailyLog.createdDate}}
        td 
          button(ng-click='deltimesheet(dailyLog._id)') Delete
  span(flex='')

